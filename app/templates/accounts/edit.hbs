<div class="row">
  <div class="col-sm-6">

    {{#if errorMessage}}
      <div class="alert alert-danger">
        <strong>Error:</strong> {{errorMessage}}
      </div>
    {{/if}}

    {{#if flash}}
      <div class="alert alert-success">
        <strong>{{flash}}</strong>
      </div>
    {{else}}
      <form {{action 'save' on='submit'}}>
        <div class="form-group">
          {{input value=model.name required="true" class="form-control" placeholder="Account name..."}}
        </div>
        <div class="form-group">
          {{input value=model.camelCasedAttribute required="true" class="form-control" placeholder="camelCasedAttribute..."}}
        </div>
        <button disabled={{isSaveDisabled}} type="submit" class="btn btn-default">Save</button>
      </form>
    {{/if}}
  </div>
</div>

{{outlet}}
